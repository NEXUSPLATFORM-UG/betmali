{
  "version": 2,
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/settle-virtual",
      "destination": "/api/settle-virtual.ts"
    },
    {
      "source": "/api/fetch-live",
      "destination": "/api/fetch-live.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/settle-virtual",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/fetch-live",
      "schedule": "*/1 * * * *"
    }
  ]
}
